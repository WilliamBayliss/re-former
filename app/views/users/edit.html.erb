

<%= form_with model: @user, url: users_path(@user), method: :patch do |form|  %>
    <%= form.text_field :username, :value => @user.username %><br><br>
    <%= form.email_field :email, :value => @user.email %><br><br>
    <%= form.password_field :password, minlength: 8, placeholder: "New Password" %><br><br>
    <%= form.submit "Submit" %>
<% end %>
<br><br>
<%= link_to "Back to Home.", root_path %>


 
